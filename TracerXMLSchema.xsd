    <xs:include schemaLocation="https://raw.githubusercontent.com/EARTHTIME/Schema/ValueModelXMLSchema.xsd"/>

    <xs:element name="Tracer" type="Tracer"/>

    <xs:complexType name ="Tracer">
        <xs:sequence maxOccurs="1">
            <xs:element name="tracerName" type="xs:string" />
            <xs:element name="versionNumber" type="xs:integer" />
            <xs:element name="tracerType" type="tracerTypeType" />
            <xs:element name="labName" type="xs:string" />
            <xs:element name="dateCertified" type="xs:date" />
            <xs:element name="ratios">
                <xs:complexType>
                    <xs:sequence minOccurs="1" maxOccurs="15">
                        <xs:element name="ValueModel" type="TracerRatio">
                        </xs:element>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
            <xs:element name="isotopeConcentrations">
                <xs:complexType>
                    <xs:sequence minOccurs="0" maxOccurs="3">
                        <xs:element name="ValueModel" type="IsotopeConcentration">
                        </xs:element>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
        </xs:sequence>
    </xs:complexType>


    <xs:simpleType name="tracerTypeType">
        <xs:restriction base="xs:string">
            <xs:enumeration value="NONE" />
            <xs:enumeration value="mixed 205-235" />
            <xs:enumeration value="mixed 205-233-235" />
            <xs:enumeration value="mixed 208-235" />
            <xs:enumeration value="mixed 205-233-236" />
            <xs:enumeration value="mixed 202-205-233-235" />
            <xs:enumeration value="mixed 202-205-233-236" />
            <xs:enumeration value="mixed 205-233-235-230Th" />
        </xs:restriction>
    </xs:simpleType>
</xs:schema>