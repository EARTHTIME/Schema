    <xs:include schemaLocation="https://raw.githubusercontent.com/EARTHTIME/Schema/ValueModelXMLSchema.xsd"/>

    <xs:element name="MineralStandardModel" type="MineralStandardModel"/>

    <xs:complexType name="MineralStandardModel">
        <xs:sequence>
            <xs:element name="name" type="xs:string" />
            <xs:element name="mineralStandardName" type="MineralStandardNameType" />
            <xs:element name="standardMineralName" type="StandardMineralNameType" />
            <xs:element name="trueAge" type="MineralStandardTrueAge" />
            <!--added 8 october 2011 -->
            <xs:element name="radiogenicIsotopeRatios">
                <xs:complexType>
                    <xs:sequence  minOccurs="0"  maxOccurs="unbounded">
                        <xs:element name="ValueModel" type="RadiogenicIsotopeRatio">
                        </xs:element>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
            <xs:element name="measuredAge" type="MineralStandardMeasuredAge" />
            <xs:element name="comment" type="xs:string" />
        </xs:sequence>
    </xs:complexType>

    <xs:simpleType name="MineralStandardNameType">
        <xs:restriction base="xs:string">
            <xs:enumeration value="NONE" />
            <xs:enumeration value="Temora" />
            <xs:enumeration value="FC-1" />
            <xs:enumeration value="FC-5" />
            <xs:enumeration value="Manicouagan" />
            <xs:enumeration value="Plesovice" />
            <xs:enumeration value="Fish Canyon Tuff" />
            <xs:enumeration value="North Mountain Basalt" />
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="StandardMineralNameType">
        <xs:restriction base="xs:string">
            <xs:enumeration value="NONE" />
            <xs:enumeration value="other" />
            <xs:enumeration value="zircon" />
            <xs:enumeration value="xenotime" />
            <xs:enumeration value="monazite" />
            <xs:enumeration value="apatite" />
            <xs:enumeration value="titanite" />
            <xs:enumeration value="rutile" />
            <xs:enumeration value="calcite" />
            <xs:enumeration value="whole rock" />
        </xs:restriction>
    </xs:simpleType>
  
</xs:schema>